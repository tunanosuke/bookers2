<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :image %>
  <table class="table font-weight-bold">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= render 'books/form' %>
</div>

<div class="col-md-8">
  <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Title</th>
        <th scope="col">Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @user_books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book, :image %></th>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
